---
import ContactoForm from "../components/contacto/contactoForm.astro";
import ContactoList from "../components/contacto/contactoList.astro";
import Layout from "../layouts/Layout.astro";
export const prerender = false
---

<Layout title="Contacto">
  <main class="main-contactame" >
    <article class="inicio-formasDeContacto">
      <ContactoList />
      <ContactoForm />
    </article>
  </main>
</Layout>

<style>
/* 
ESTILOS GENERALES DE LA ETIQUETA PRINCIPAL
*/
.main-contactame {
	min-height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
  gap: 1rem;
}
/* 
ESTILOS PARA LA SECCION DE CONTACTANOS
*/
.inicio-formasDeContacto {
	max-width: 120rem;
	width: 100%;
	min-height: 50rem;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 1rem;
  transition: all 0.5s ease;
}


@media only screen and (max-width: 980px) {
  .main-contactame {
    min-height: 100vh;
  }
  .inicio-formasDeContacto {
    min-height: 68rem;
  }

}


/* version mobile */
@media only screen and (max-width: 660px) {
  .main-contactame {
    margin-top: 0;
    min-height: 50rem;
  }
  .inicio-formasDeContacto {
    min-height: 20rem;
    flex-wrap: wrap;
  }
}
</style>
