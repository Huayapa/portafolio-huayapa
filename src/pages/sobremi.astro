---
import Layout from "../layouts/Layout.astro";
import SobremiInfo from "../components/sobremi/sobremiInfo.astro";
import SobremiGrid from "../components/sobremi/sobremiGrid.astro";
---

<Layout title="Sobre mi">
  <main class="main-sobremi">
    <article class="inicio-informacion">
      <SobremiInfo />
      <SobremiGrid />
    </article>
  </main>
</Layout>

<style>
/* 
ESTILOS GENERALES DE LA ETIQUETA PRINCIPAL
*/
.main-sobremi {
	min-height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
  gap: 1rem;
}
/* 
ESTILOS PARA LA SECCION DE informacion
*/
.inicio-informacion {
	max-width: 120rem;
	width: 100%;
	min-height: 58rem;
	margin: 0 auto;
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 1rem;
}

/* version mobile */
@media only screen and (max-width: 980px) {
  .main-sobremi {
    min-height: 54rem;
  }
  .inicio-informacion {
    min-height: 60rem;
  }
}
@media only screen and (max-width: 870px) {
  .main-sobremi {
    margin-top: 14rem;
  }
  .inicio-informacion {
    flex-wrap: wrap;
  }
}

@media only screen and (max-width: 660px) {
  .main-sobremi {
    margin-top: 0;
  }
  .inicio-informacion {
    min-height: 20rem;
  }
}
</style>