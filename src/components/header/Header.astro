---
import HeaderBtn from "./HeaderBtn.astro";
import HeaderLogo from "./HeaderLogo.astro";
import HeaderRedes from "./HeaderRedes.astro";

interface RutaNav {
	name: string;
	ruta: string;
}

const rutas:Array<RutaNav> = [
	{name: "Inicio", ruta: "/"},
	{name: "Sobre mi", ruta: "/sobremi"},
	{name: "Proyectos", ruta: "/proyectos"},
	{name: "Habilidades", ruta: "/habilidades"},
	{name: "Contactame", ruta: "/contactame"},
];
---
<header >
  <!-- LOGO PRINCIPAL -->
  <HeaderLogo />
  <!-- BARRA DE NAVEGACION -->
  <nav id="menu-navigation" transition:name="hero">
    {
      rutas.map(({name, ruta}) => (
        <HeaderBtn hrefName={ruta} name={name}/>
      ))
    }
  </nav>
  <!-- SECCION DE MIS REDES Y EL BOTON DEL MENU MOBILE -->
  <article class="section-left">
    <HeaderRedes />
    <button id="btn-menu">
      <svg width="40" height="40" viewBox="0 0 100 100">
        <path class="line line1" d="M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058" />
        <path class="line line2" d="M 20,50 H 80" />
        <path class="line line3" d="M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942" />
      </svg>
    </button>
  </article>
</header>

<script is:inline>
    // DESPLEGAR Y OCULTAR EL MENU DE NAVEGACION MOBILE
    document.addEventListener("astro:page-load", () => {
      let $btnMenu = document.getElementById("btn-menu"),
        $navMenu = document.getElementById("menu-navigation");
      $btnMenu?.addEventListener("click", () => {
        $btnMenu?.classList.toggle("activebtn");
        $navMenu?.classList.toggle("activebtn");
      });
    })

</script>

<style>
/* ESTILOS PRINCIPALES DEL HEADER */
header {
  width: 100%;
  position: fixed;
  background-color: var(--header-fondo-c-dark);
  top: 0;
  z-index: 999;
  display: flex;
  justify-content: space-evenly;
  flex-wrap: wrap;
  gap: 0.5rem;
  & nav {
    max-width: 40rem;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }
  & .section-left {
    display: flex;
  }
  
  & button {
    padding: 0;
    border: 0;
    background-color: transparent;
    display: none;
    & svg {
      cursor: pointer;
      width: 2rem;
      height: 2rem;
      stroke: white;
      transition: all 0.5s ease;

    }
    &:hover svg {
      transform: scale(1.4);
    }
  }
}
@media only screen and (max-width: 980px) {
  header {
    position: fixed;
  }
  header nav {
    max-width: 100%;
    width: 100%;
  }
}
/* version mobile */
@media only screen and (max-width: 660px) {
  header {
    justify-content: space-evenly;
    gap: 1rem;
    position: sticky;
    & .section-left {
      flex-wrap: wrap;
      justify-content: center;
    }
    /* DISEÃ‘O RESPONSIVO DEL MENU CUANDO SE ACTIVE */
    & button {
      display: block;
    }
    & nav {
      position: absolute;
      top: 100%;
      background-color: var(--header-fondo-c-dark);
      display: none;
      opacity: 0;
      z-index: 998;
      transition: all 400ms ease, display 400ms ease allow-discrete;
    }
    & #menu-navigation.activebtn {
      opacity: 1;
      display: flex;
      @starting-style {
        opacity: 0;
      }
    }
  }
}
/* ESTILOS PARA EL BOTON DE HAMBURGUESA CON ANIMACION */
.line {
  fill: none;
  stroke: white;
  stroke-width: 6;
  transition: stroke-dasharray 400ms cubic-bezier(0.4, 0, 0.2, 1),
    stroke-dashoffset 400ms cubic-bezier(0.4, 0, 0.2, 1);
}
.line1 {
  stroke-dasharray: 60 207;
  stroke-width: 6;
}
.line2 {
  stroke-dasharray: 60 60;
  stroke-width: 6;
}
.line3 {
  stroke-dasharray: 60 207;
  stroke-width: 6;
}

#btn-menu.activebtn {
  .line1 {
    stroke-dasharray: 90 207;
    stroke-dashoffset: -134;
    stroke-width: 6;
  }
  .line2 {
    stroke-dasharray: 1 60;
    stroke-dashoffset: -30;
    stroke-width: 6;
  }
  .line3 {
    stroke-dasharray: 90 207;
    stroke-dashoffset: -134;
    stroke-width: 6;
  }
}



</style>