---
const correo = {
  name: "contactohuayapa@gmail.com",
  url: "mailto:contactohuayapa@gmail.com"
};
const ubicacion:string = "Lima - Perú";
---

<footer>
  <section class="box box1">
    <svg width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"  class="icon icon-tabler icons-tabler-filled icon-tabler-map-pin"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18.364 4.636a9 9 0 0 1 .203 12.519l-.203 .21l-4.243 4.242a3 3 0 0 1 -4.097 .135l-.144 -.135l-4.244 -4.243a9 9 0 0 1 12.728 -12.728zm-6.364 3.364a3 3 0 1 0 0 6a3 3 0 0 0 0 -6z" /></svg>
    <p>Ubicación: {ubicacion}</p>
  </section>

  <section class="box box2">
    <strong>@Josue huayapa - desarrollador web</strong>
    <div>Encantado de trabajar con ustedes</span>
  </section>

  <section class="box box3">
    <svg width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-mail"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
    <a href={correo.url}>
      Correo Electronico: <br> <span class="url-design">{correo.name}</span>
    </a> 
  </section>
</footer>


<style>
footer {
  max-width: 120rem;
  width: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-wrap: wrap;
  background-color: var(--footer-fondo-c-dark);
}
svg {
  min-width: 2rem;
  min-height: 2rem;
}
/*
SECCIONES DEL PIE DE PAGINA
ALINEAR Y MANTENER UNA DISTANCIA ADECUADA
*/
.box {
  padding: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}
.box2 {
  flex-direction: column;
}
.box3 {
  & a {
    max-width: 16rem;
    width: 100%;
    color: var(--text-link-footer-c-dark);
    overflow-wrap: break-word;
    font-size: clamp(1rem, 1.4vw, 1.2rem);
    text-decoration: none;
  }
  & .url-design {
    transition: all 0.5s ease;
    &:hover {
      text-decoration: underline;
    }
  }
}
@media only screen and (max-width: 820px) {
footer {
 justify-content: center;
 gap: 1rem;
}
.box {
  max-width: 100%;
  width: 100%;
  flex-wrap: wrap;
  text-align: center;
}
.box3 {
  padding: 1rem;
  word-break: break-all;
  display: flex;
  & span {
    width: 100%;
  }
}
}
</style>